<section class="pfstraining">
  <label class="details-label" for="{{options.id}}-pfs-training">{{localize "pfsorgplay-training.display.selection.label"}}</label>
  <div class="toggle{{#if data.pfstraining}} enabled{{/if}}">
    <input class="details-input" id="{{options.id}}-pfs-training" name="system.pfs.training" type="checkbox" {{checked data.pfs.training}} />
    <label for="{{options.id}}-pfs-training"></label>
  </div>
  <div class="tab biography" data-group="primary" data-tab="description">
    {{!-- If you want TinyMCE editors to output inline rolls when rendered, you need to pass the actor's roll data to the rollData property. --}}
    {{editor system.biography target="system.biography" rollData=rollData button=true owner=owner editable=editable}}
  </div>
</section>

